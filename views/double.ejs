<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>WevsRoll 🎰</title>
  <link rel="stylesheet" href="/double.css" />
</head>
<body>
  <header>
    <h1 class="titulo">WevsRoll</h1>
  </header>

  <main class="painel">
    <!-- Roleta horizontal -->
    <section class="roleta-wrapper">
      <div class="roleta-track" id="roleta-track">
        <!-- Quadrados numerados de 0 a 14 serão gerados via JS -->
      </div>
      <div class="linha-central"></div>
    </section>

    <!-- Botões de aposta -->
    <section class="apostar">
      <h2>Aposte na cor</h2>
      <div class="botoes-cor">
        <button class="btn-cor red" data-cor="red">🔴 Vermelho (2x)</button>
        <button class="btn-cor black" data-cor="black">⚫ Preto (2x)</button>
        <button class="btn-cor white" data-cor="white">⚪ Branco (14x)</button>
      </div>
    </section>

    <!-- Valor da aposta -->
    <section class="valor-aposta">
      <h2>Valor da Aposta</h2>
      <input type="number" id="campo-valor" min="1" placeholder="Digite o valor" />

      <div class="controle-valor">
        <button id="menos">-</button>
        <button id="mais">+</button>
      </div>

      <div class="controle-extra">
        <button id="x2">x2</button>
        <button id="max">max</button>
      </div>
    </section>

    <!-- Botão de Apostar -->
    <section class="confirmar-aposta">
      <button id="btn-apostar">🎰 Apostar</button>
    </section>

    <!-- Histórico de rodadas -->
<h2>Últimos resultados</h2>
<div id="ultimos-resultados" class="resultados-wrapper"></div>

    <!-- Tempo restante -->
    <section class="tempo">
      <p id="tempo-status">⏳ Girando em: <span id="tempo">15</span>s</p>
    </section>
  </main>

  <script src="/double.js"></script>
</body>
</html>
